<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.radicalpeas.radguidelines.SpinnerWithPrompt
            android:id="@+id/spinner_cyst_or_solid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/renal_cyst_solid"
            />

        <LinearLayout android:id="@+id/renal_cyst_layout"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_below="@id/spinner_cyst_or_solid"
                      android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_renal_cyst_demographic"
                    style="@style/standardTextLabelStyle"
                    android:text="@string/demographic_prompt"/>

                <Spinner
                    android:id="@+id/spinner_renal_cyst_demographic"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_renal_cyst_wall"
                    style="@style/standardTextLabelStyle"
                    android:text="@string/renal_cyst_wall_prompt"
                    />
                <Spinner
                    android:id="@+id/spinner_cyst_wall"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_renal_cyst_attenuation"
                    style="@style/standardTextLabelStyle"
                    android:text="@string/renal_cyst_attenuation_prompt"
                    />
                <Spinner
                    android:id="@+id/spinner_cyst_attenuation"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_renal_cyst_septation"
                    style="@style/standardTextLabelStyle"
                    android:text="@string/renal_cyst_septation_prompt"
                    />
                <Spinner
                    android:id="@+id/spinner_cyst_septations"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_renal_cyst_calcification"
                    style="@style/standardTextLabelStyle"
                    android:text="@string/renal_cyst_calcification_prompt"
                    />
                <Spinner
                    android:id="@+id/spinner_cyst_calcifications"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_renal_cyst_enhancement"
                    style="@style/standardTextLabelStyle"
                    android:text="@string/renal_cyst_enhancement_prompt"
                    />
                <Spinner
                    android:id="@+id/spinner_cyst_enhancement"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_renal_cyst_size"
                    style="@style/standardTextLabelStyle"
                    android:text="@string/size_prompt"
                    />
                <Spinner
                    android:id="@+id/spinner_cyst_size"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout android:id="@+id/renal_solid_layout"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_below="@id/spinner_cyst_or_solid"
                      android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_renal_solid_nonneoplastic"
                    style="@style/standardTextLabelStyle"
                    android:text="@string/nonneoplastic_prompt"/>

                <Spinner
                    android:id="@+id/spinner_renal_solid_nonneoplastic"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_renal_solid_demographic"
                    style="@style/standardTextLabelStyle"
                    android:text="@string/demographic_prompt"/>

                <Spinner
                    android:id="@+id/spinner_renal_solid_demographic"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/label_renal_solid_size"
                    style="@style/standardTextLabelStyle"
                    android:text="@string/size_prompt"
                    />

                <Spinner
                    android:id="@+id/spinner_renal_solid_size"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</ScrollView>
