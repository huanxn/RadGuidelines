<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.radicalpeas.radguidelines.SpinnerWithPrompt
            android:id="@+id/spinner_cyst_or_solid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/renal_cyst_solid"
            />

        <!-- will inflate with Renal Cyst or Renal Solid lesion group of menu items -->
        <FrameLayout
            android:id="@+id/renal_lesion_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

    </LinearLayout>

</ScrollView>
